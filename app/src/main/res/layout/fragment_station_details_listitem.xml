<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                >

                <TextView
                    android:id="@+id/stationDetailsLItemTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="1255 to"
                    android:textColor="@color/colorTitleText"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/stationDetailsLItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/stationDetailsLItemPlatformLabel"
                    android:layout_toRightOf="@+id/stationDetailsLItemTime"
                    android:text="Southampton Central (SOU)"
                    android:textColor="@color/colorTitleText"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:id="@+id/stationDetailsLItemStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stationDetailsLItemName"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@id/stationDetailsLItemPlatformLabel"
                    android:layout_toRightOf="@+id/stationDetailsLItemTime"
                    android:text="At Platform"
                    android:textColor="@color/colorSubtitleText" />

                <TextView
                    android:id="@+id/stationDetailsLItemPlatformLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/platform"
                    android:textColor="@color/colorSubtitleText"
                    />

                <TextView
                    android:id="@+id/stationDetailsLItemPlatform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stationDetailsLItemPlatformLabel"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:text="2"
                    android:textColor="@color/colorSubtitleText"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/stationDetailsLItemMoreDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temp"></TextView>

            </RelativeLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>